<%- layout('layouts/boilerplate') %>
<h1 class="text-center">Edit Campground</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds/<%= camp.id %>?_method=PUT" method="POST" novalidate class="needs-validation"
            enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">
                    Title
                </label>
                <input type="text" id="title" name="camp[title]" placeholder="Title" class="form-control"
                    value="<%= camp.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">
                    Location
                </label>
                <input type="text" id="location" name="camp[location]" placeholder="Location" class="form-control"
                    value="<%= camp.location %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">
                    Campground Price
                </label>
                <div class="input-group">
                    <span class="input-group-text" id="basic-addon1">$</span>
                    <input type="text" id="price" name="camp[price]" class="form-control" placeholder="0.00"
                        value="<%= camp.price %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">
                    Description
                </label>
                <textarea name="camp[description]" id="description" rows="3" placeholder="Description"
                    class="form-control" required><%= camp.description %></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Add more Image(s)</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>
            <div class="mb-3">
                <% camp.images.forEach(function(img, i) { %>
                <div class="d-inline-block">
                    <img src="<%= img.thumbnail %> " alt="" class="img-thumbnail">
                    <div class="form-check-inline">
                        <input class="form-check-input" type="checkbox" id="image-<%= i %>" name="deleteImages[]"
                            value="<%= img.filename %>">
                    </div>
                    <label for="image-<%= i %>">Delete?</label>
                </div>
                <% }) %>
            </div>
            <div class="mb-3">
                <a href="/campgrounds/<%= camp.id %>" class="btn btn-secondary">Cancel</a>
                <button class="btn btn-info">Update Campground</button>
            </div>
        </form>
        <a href="/campgrounds" class="btn btn-primary mb-3">All Campgrounds</a>
    </div>
</div>