<%- layout('layouts/boilerplate') %>
<h1 class="text-center">Edit Campground</h1>

<div class="row">
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%= camp.id %>/edit?_method=PUT" method="POST">
            <div class="mb-3">
                <label for="title" class="form-label">
                    Title
                </label>
                <input type="text" id="title" name="camp[title]" placeholder="Title" class="form-control"
                    value="<%= camp.title %>">
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">
                    Location
                </label>
                <input type="text" id="location" name="camp[location]" placeholder="Location" class="form-control"
                    value="<%= camp.location %>">
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">
                    Image URL
                </label>
                <input type="text" id="image" name="camp[image]" placeholder="Image URL" class="form-control"
                    value="<%= camp.image %>">
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">
                    Campground Price
                </label>
                <div class="input-group">
                    <span class="input-group-text" id="basic-addon1">$</span>
                    <input type="text" id="price" name="camp[price]" class="form-control" placeholder="0.00"
                        value="<%= camp.price %>">
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">
                    Description
                </label>
                <textarea name="camp[description]" id="description" rows="3" placeholder="Description"
                    class="form-control"><%= camp.description %></textarea>
            </div>
            <div class="mb-3">
                <a href="/campgrounds/<%= camp.id %>" class="btn btn-secondary">Cancel</a>
                <button class="btn btn-info">Update Campground</button>
            </div>
        </form>
        <a href="/campgrounds" class="btn btn-primary mb-3">All Campgrounds</a>
    </div>
</div>