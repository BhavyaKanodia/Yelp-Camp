<%- layout('layouts/boilerplate') %>
<h1>Edit Campground</h1>
<form action="/campgrounds/<%= camp.id %>/edit?_method=PUT" method="POST">
    <div>
        <label for="title">
            Title:
        </label>
        <input type="text" id="title" name="camp[title]" placeholder="Title" value="<%= camp.title %>">
    </div>
    <div>
        <label for="location">
            Location:
        </label>
        <input type="text" id="location" name="camp[location]" placeholder="Location" value="<%= camp.location %>">
    </div>
    <button>Submit Changes</button>
</form>

<footer>
    <p>
        <a href="/campgrounds">All Campgrounds</a>
    </p>
</footer>